{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    "declaration": true,
    "declarationMap": true,

    "lib": ["es2023"],
  }
}
